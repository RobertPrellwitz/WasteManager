@model IEnumerable<GarbageCollection.Models.CollectionData>

@{
    ViewData["Title"] = "bill";
    Layout = "~/Views/Shared/_Layout.cshtml";
    double total = 0;
}

<h2>bill</h2>

@*<p>
    <a asp-action="Create">Create New</a>
</p>*@
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Paid)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.special)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.charge)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.identityUser)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {

            { total = total + item.charge; }
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Paid)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.special)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.charge)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.identityUser.Id)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
        <tr>
            <td colspan="3" align="Left"> 
                Total:  
            </td>
            <td colspan="2" align="left">$   @total </td>
        </tr>
    </tbody>

</table>



